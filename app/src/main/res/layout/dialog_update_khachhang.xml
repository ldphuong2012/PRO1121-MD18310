<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:background="@drawable/custom_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/green"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Sửa khách hàng"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã khách hàng:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/edt_makh_update"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edt_khachhang"
        android:paddingStart="10dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên khách hàng:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/edt_tenkh_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_khachhang"
        android:paddingStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/edt_daiChi_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_khachhang"
        android:paddingStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số Điện Thoại:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/edt_sdt_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_khachhang"
        android:paddingStart="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_updatekh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:text="Save" />

        <Button
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"/>
    </LinearLayout>


</LinearLayout>