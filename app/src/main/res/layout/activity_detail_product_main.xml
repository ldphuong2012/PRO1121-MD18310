<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail.DetailProduct_Main"
    android:orientation="vertical">
    <TextView
        android:id="@+id/detailName_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:text="Tên sản phẩm"
        android:textSize="35dp"
        android:textStyle="bold"

        />



    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/detailImg_main"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_image"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sản phẩm: "
            android:layout_marginTop="14dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailTypePr_main"

            android:layout_marginTop="14dp"
            android:textSize="24dp"

            android:layout_marginBottom="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền: "
            android:layout_marginTop="14dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailPrice_main"

            android:layout_marginTop="14dp"
            android:textSize="24dp"

            android:layout_marginBottom="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:layout_marginTop="14dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailNumber_main"

            android:layout_marginTop="14dp"
            android:textSize="24dp"

            android:layout_marginBottom="12dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả: "
        android:layout_marginTop="14dp"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/detailDes_main"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        />
<Button
    android:id="@+id/btn_add_cart"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Thêm vào giỏ hàng"
    android:textSize="25dp"
    android:backgroundTint="@color/green"
    android:layout_marginTop="20dp"/>




</LinearLayout>